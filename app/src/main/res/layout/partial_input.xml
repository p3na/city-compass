<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_mid">

    <de.chrstn.universalcompass.views.DelayAutoCompleteTextView
        android:id="@+id/et_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="flagNoExtractUi|actionSearch"
        android:inputType="textCapSentences"
        android:hint="@string/placeholder"
        android:paddingEnd="@dimen/margin_mid"
        android:paddingRight="@dimen/margin_mid" />

    <ProgressBar
        android:id="@+id/pb_loading_indicator"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:visibility="gone"/>

</FrameLayout>